<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myapplication58.MainActivity"
    android:gravity="center"
    android:background="@color/teal_700"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/drivers_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"

        >
        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="381dp"
            android:layout_gravity="clip_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center"
                android:text="What activity would you like to do ?"
                android:textColor="@color/teal_700"
                android:textSize="26sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/Dravers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/customer"
                android:backgroundTint="@color/teal_700"
                android:text="I'm a Customers"
                app:cornerRadius="20dp" />
            <Button
                android:id="@+id/Customers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/driver"
                android:backgroundTint="@color/teal_700"
                android:text="I'm a Dravers"
                app:cornerRadius="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center"
                android:text="Welcome"
                android:textColor="@color/black"
                android:textSize="29sp"
                android:textStyle="bold"


                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>


